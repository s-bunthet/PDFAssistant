<UserControl x:Class="PDFAssistant.View.UserControls.ExtractPages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDFAssistant.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Label Content="File:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ListBox x:Name="pdf_extract"  AllowDrop="True" Drop="pdf_extract_Drop" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="80,10,0,0" Height="26"/>

        <Label Content="Pages:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox Name="pages_box" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="80,50,0,0"/>

        <Button x:Name="btn_extract" Content="Extract" Width="80" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,100,0,0" Click="btn_extract_Click"/>
        

    </Grid>


</UserControl>
